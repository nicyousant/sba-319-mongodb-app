<body>
        <%- include('../partials/header') %>
    <h1>Destination details:</h1>
    <form class="form form-show">
        <label for="name">
            City:
            <input type="text" name="city" id="city" value="<%= destination.city %>" disabled>
        </label>
        <label for="country">
            Country:
            <input type="text" name="country" id="country" value="<%= destination.country %>" disabled>
        </label>
       <label for="year_visited">
            Year Visited:
            <input type="text" name="year_visited" id="year_visited" value="<%= destination.year_visited %>" disabled>
        </label>
         <label for="highlights">
            Highlights:
            <input type="text" name="highlights" id="highlights" value="<%= destination.highlights %>" disabled>
        </label>
         <label for="highlights">
            Foods:
            <input type="text" name="foods" id="foods" value="<%= destination.foods %>" disabled>
        </label>
        <a href="/destinations/<%= destination._id %>/edit">Edit</a>
    </form>
    <br><br><br>
    <p>
        <a href="/destinations">Back</a>
    </p>
    <form action="/destinations/<%= destination._id %>?_method=DELETE" method="POST" class="align-right"><button>Delete</button></form>
